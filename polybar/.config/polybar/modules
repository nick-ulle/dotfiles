; polybar module configuration file

[module/terminal]
type = custom/text
content = ""
click-left = wezterm start -- bash -ic tmux

content-padding = 1

[module/web]
type = custom/text
content = ""
click-left = firefox &

content-padding = 1

[module/settings]
type = custom/text
content = ""
click-left = cinnamon-settings &

content-padding = 1

[module/pulse]
type = custom/text
content = ""
click-left = pavucontrol &

content-padding = 1

[module/wireless-network]
type = internal/network
interface = wlan0

label-connected = "  %essid%"

label-disconnected = "  No Wifi"
format-disconnected-background = ${colors.red}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC0

label-full = "  %percentage%%"
format-full-padding = 2

label-charging = "  %percentage%%"

label-discharging = "  %percentage%%"
format-discharging-background = ${colors.blue}

[module/audio]
type = internal/pulseaudio

label-volume = "  %percentage%%"
format-volume-background = ${colors.green}

label-muted = "  Mute"

[module/ram]
type = internal/memory
interval = 5
label = "  %gb_used%"

[module/date]
type = internal/date
interval = 360
date = "  %b %e"

[module/time]
type = internal/date
date = "  %H:%M"
