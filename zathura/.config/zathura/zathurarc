
# Appearance
set default-bg "#f8f6e3"
set statusbar-bg "#eee8d5"
set statusbar-fg "#586e75"
set inputbar-bg "#f8f6e3"
set inputbar-fg "#586e75"

set notification-bg "#268bd2"
set notification-fg "#f8f6e3"
set notification-warning-bg "#6c71c4"
set notification-warning-fg "#f8f6e3"
set notification-error-bg "#dc322f"
set notification-error-fg "#f8f6e3"

set font "Inconsolata for Powerline 12"

# Behavior
set window-height 1800
set window-width  1600
set window-title-basename "true"
set adjust-open "width"
set scroll-step 150

set selection-clipboard "clipboard"

set search-hadjust "false"
set incremental-search "false"

# Key Bindings
map   +       adjust_window "width"
map   _       adjust_window "best-fit"
map   =       zoom "in"
map   <Up>    navigate previous
map   <Down>  navigate next

unmap q
